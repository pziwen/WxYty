page {
  background-color: #f3f4f5;
  position: relative;
}
/*用户信息*/
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.user_info_wrap .user_img_wrap {
  height: 100%;
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  width: 110vw;
  position: absolute;
  filter: blur(10rpx);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  color: white;
  font-size: 40rpx;
  margin-top: 40rpx;
}
.user_info_wrap .user_btn {
  width: 150rpx;
  height: 80rpx;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
}
.user_info_wrap .user_btn navigator {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  font-size: 38rpx;
  color: white;
  background-color: var(--themeColor);
}
/*主体*/
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  margin-bottom: 30rpx;
  /*历史足迹*/
  /*我的订单*/
}
.user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .history_wrap navigator .his_name {
  color: #666;
}
.user_content .user_main .orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.user_content .user_main .orders_wrap .orders_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .orders_wrap .order_content {
  display: flex;
}
.user_content .user_main .orders_wrap .order_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
.user_content .user_main .orders_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .orders_wrap .order_content navigator .order_name {
  color: #666;
}
.user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_item button {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  border: none;
  font-size: 28rpx;
  font-weight: normal;
  color: #000;
  text-align: left;
}
.user_content .user_main .app_info_wrap .app_info_item:last-child {
  border-bottom: none;
}
.user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.user_content .user_main .recommend_wrap button {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  border: none;
  font-size: 28rpx;
  font-weight: normal;
  color: #000;
  text-align: left;
}
.shade_wrap {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}
.shade_wrap .login_modal {
  width: 80%;
  height: 60%;
  overflow: hidden;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.shade_wrap .login_modal .login_title {
  font-size: 36rpx;
  width: 100%;
  text-align: center;
}
.shade_wrap .login_modal image {
  width: 33%;
}
.shade_wrap .login_modal .login_btn_wrap .login_btn {
  margin: 0;
  padding: 0;
  width: 30vw;
  border: none;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: normal;
  color: white;
  padding: 10rpx;
}
.shade_wrap .login_modal .login_btn_wrap .login_yes button {
  background-color: var(--themeColor);
  margin-bottom: 20rpx;
}
.shade_wrap .login_modal .login_btn_wrap navigator {
  border-radius: 15rpx;
  background-color: #00FF00;
  text-align: center;
}
