page {
  padding-bottom: 90rpx;
  background-color: #f3f4f5;
}
/*添加地址*/
.address_row {
  display: flex;
}
.address_row .address_info_row {
  flex: 4;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.address_row .address_info_row .address_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address_row .address_info_row .address_text {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.address_row .address_change_row {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address_row .address_change_row button {
  width: 80%;
  height: 80%;
  margin: 0;
  padding: 0;
  font-size: 34rpx;
  color: white;
  background-color: var(--themeColor);
  display: flex;
  justify-content: center;
  align-items: center;
}
/*购物车*/
.cart_content .cart_titel {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
  background-color: #fff;
}
.cart_content .cart_main {
  /*购物车为空*/
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  width: 95%;
  border-radius: 15rpx;
  margin: 20rpx auto;
  background-color: #fff;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap image {
  width: 80%;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #333;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .goods_price {
  font-size: 34rpx;
  color: var(--themeColor);
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool .goods_num {
  min-width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_warp .cart_num_tool .goods_num text {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_null_img {
  display: block;
  width: 70%;
  margin: 20rpx auto 50rpx;
}
.cart_content .cart_main .cart_null_text {
  text-align: center;
  font-size: 34rpx;
}
/*底部工具栏*/
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer_tool .total_price_wrap {
  flex: 4;
  padding-right: 15rpx;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer_tool .total_price_wrap view:nth-last-child(1) {
  font-size: 24rpx;
}
.footer_tool .order_pay_wrap {
  flex: 2;
  color: #fff;
  background-color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
